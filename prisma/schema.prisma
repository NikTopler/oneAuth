generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model applications {
  ID          Int     @id @default(autoincrement())
  name        String
  description String?
  userID      Int
}

model sessions {
  ID            Int    @id @default(autoincrement())
  token         String
  createdAt     String
  expiresAt     String
  userID        Int
  applicationID Int?
}

model users {
  ID          Int     @id @default(autoincrement())
  firstName   String?
  middleName  String?
  lastName    String?
  email       String  @unique(map: "sqlite_autoindex_users_1")
  phoneNumber String?
  googleID    String?
  facebookID  String?
  microsoftID String?
}
