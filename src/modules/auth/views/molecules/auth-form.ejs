<link rel="stylesheet" type="text/css" href="/styles/auth/auth-form.css" />

<form 
    id="auth-form" 
    method="post"
    hx-post="<%=form.action%>" 
    hx-target="#auth-form" 
    hx-swap="outerHTML" 
    hx-trigger="submit">
    <%if(form.errors.length > 0) {%>
    <section>
        <ul>
            <%form.errors.forEach((error) => {%>
            <li>
                <p><%=error.description%></p>
                <span><%=error.message%></span>
                <code><%=error.name%></code>
            </li>
            <%})%>
        </ul>
    </section>
    <%}%>
    <section>
        <%- include('../atoms/form-field.ejs', form.email) %>
        <%- include('../atoms/form-field.ejs', form.password) %>
        <%if (form.includePasswordHelper) { %>
            <%- include('../atoms/password-helper.ejs') %>
        <% } %>
    </section>
    <button type="submit">Submit</button>
</form>